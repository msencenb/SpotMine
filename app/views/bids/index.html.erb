<h1>Listing bids</h1>

<table>
  <tr>
    <th>User</th>
    <th>Amount</th>
    <th>Auction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bids.each do |bid| %>
  <tr>
    <td><%= bid.user_id %></td>
    <td><%= bid.amount %></td>
    <td><%= bid.auction_id %></td>
    <td><%= link_to 'Show', bid %></td>
    <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
    <td><%= link_to 'Destroy', bid, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

