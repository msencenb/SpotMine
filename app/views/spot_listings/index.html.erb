<% @spot_listings.each do |spot_listing| %>
  <tr>
    <td><%= spot_listing.title %></td>
    <td><%= spot_listing.description %></td>
    <td><%= spot_listing.amount %></td>
    <td><%= link_to 'Show', spot_listing %></td>
    <td><%= link_to 'Edit', edit_spot_listing_path(spot_listing) %></td>
    <td><%= link_to 'Destroy', spot_listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

